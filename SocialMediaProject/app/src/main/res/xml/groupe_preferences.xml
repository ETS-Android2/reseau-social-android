<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <PreferenceCategory app:title="Alertes"
            android:key="category_notifications"
            app:isPreferenceVisible="false">

            <SwitchPreferenceCompat
                app:key="group_notification"
                app:title="@string/group_notification" />

        </PreferenceCategory>

    <PreferenceCategory app:title="Invitations"
        android:key="category_invitations"
        app:isPreferenceVisible="false">

        <Preference
            app:key="group_invite"
            app:title="Générer un code d'invitation" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Général"
        app:key="category_general"
        app:isPreferenceVisible="false">

        <Preference
            app:key="group_edit"
            app:title="@string/group_edit"
            app:isPreferenceVisible="false"/>

        <Preference
            app:key="group_waitlist"
            app:title="@string/group_title_waitlist"
            app:isPreferenceVisible="false" />

        <Preference
            app:key="group_members"
            app:title="@string/group_members"
            app:isPreferenceVisible="false"/>

        <Preference
            app:key="group_delete"
            app:title="@string/delete_group"
            app:isPreferenceVisible="false"/>

        <Preference
            app:key="group_exit"
            app:title="@string/group_exit"
            app:isPreferenceVisible="false"/>


    </PreferenceCategory>
</PreferenceScreen>