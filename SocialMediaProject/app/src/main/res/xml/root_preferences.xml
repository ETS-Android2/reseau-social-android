<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title_settings_alerts">

        <Preference
            app:key="notifications"
            app:title="Notifications" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_category_general">

        <SwitchPreference
            app:key="theme_dark_mode"
            app:summaryOff="@string/settings_desactivated"
            app:summaryOn="@string/settings_activated"
            app:title="@string/settings_dark_mode" />

        <Preference
            app:key="deconnexion"
            app:title="@string/settings_log_out" />
    </PreferenceCategory>

</PreferenceScreen>