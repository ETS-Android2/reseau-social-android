<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title_settings_alerts">

        <Preference
            app:key="notifications"
            app:title="Notifications" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Général">

        <Preference
            app:key="informations"
            app:title="Personnal informations" />

        <Preference
            app:key="activity"
            app:title="Your activity" />

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="Dark mode"
            app:summaryOff="Désactivé"
            app:summaryOn="Activé"
            />

        <Preference
            app:key="help"
            app:title="Help" />

        <Preference
            app:key="deconnexion"
            app:title="Log Out" />

    </PreferenceCategory>



</PreferenceScreen>