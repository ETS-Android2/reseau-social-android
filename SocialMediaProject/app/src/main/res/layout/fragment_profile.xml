<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:paddingTop="20dp"
        android:paddingBottom="15dp">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/launch_screen"
            android:layout_centerHorizontal="true"
            app:civ_border_color="@color/colorSecondary"
            app:civ_border_width="5dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="5dp"
            app:civ_shadow_color="#AD2B2B2B"
            app:civ_shadow_gravity="end"

            tools:ignore="MissingClass" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/launch_screen"
            android:layout_centerHorizontal="true"
            app:civ_circle_color_start="@color/colorPrimary"
            app:civ_circle_color_end="@color/colorLight"
            app:civ_border_color="@color/colorSecondary"
            app:civ_border_width="5dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="5dp"
            app:civ_shadow_color="@color/colorLight"
            app:civ_shadow_gravity="top"

            tools:ignore="MissingClass" />


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/image_profile"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <ListView
        android:id="@+id/profileListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"/>


</LinearLayout>