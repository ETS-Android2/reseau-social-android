<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.groupes.post.PostGroupeFragment"
    tools:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorSecondary"
            android:padding="10dp"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/group_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Nom du groupe" />
            <TextView
                android:id="@+id/group_acces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="private group"
                android:layout_below="@+id/group_title"/>

            <TextView
                android:id="@+id/group_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_below="@+id/group_title"
                android:layout_toEndOf="@+id/group_acces"
                android:text="50 members" />

            <TextView
                android:id="@+id/group_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="type de groupe"
                android:layout_below="@+id/group_acces"/>
        </RelativeLayout>
        
        <ListView
            android:id="@+id/ListView_posts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:padding="10dp"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:layout_below="@+id/header_group"/>
    </RelativeLayout>




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_baseline_add_24"
        android:contentDescription="@string/addPost"
        android:layout_margin="16dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>